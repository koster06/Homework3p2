<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextName"
        style="@style/myPersonalStyle"
        android:hint="name"
        android:inputType="textPersonName"
        android:maxLength="15"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextSurname"
        style="@style/myPersonalStyle"
        android:hint="surname"
        android:inputType="textPersonName"
        android:maxLength="15"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <EditText
        android:id="@+id/editTextPhone"
        style="@style/myPersonalStyle"
        android:hint="phone"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@+id/editTextSurname"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextNumber"
        style="@style/myPersonalStyle"
        android:ems="10"
        android:hint="age"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhone" />

    <LinearLayout
        android:id="@+id/layoutOfBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:layout_constraintVertical_bias="0.203">


        <Button
            android:id="@+id/button"
            android:text="Write"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            style="@style/styleOfButton" />

        <Button
            android:id="@+id/button2"
            android:text="Clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            style="@style/styleOfButton2" />
    </LinearLayout>

    <!-- Дизайн должен быть реализован в стилях -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutOfBtn"
        app:layout_constraintVertical_bias="0.195">

        <TableRow style="@style/styleOfRow">

            <TextView
                android:id="@+id/textView"
                android:text="Name"
                style="@style/styleOfTextInRow" />

            <TextView
                android:id="@+id/textView2"
                style="@style/styleOfTextInRow" />
        </TableRow>

        <TableRow
            style="@style/styleOfRow">

            <TextView
                android:id="@+id/textView4"
                style="@style/styleOfTextInRow"
                android:text="Last name" />

            <TextView
                android:id="@+id/textView3"
                style="@style/styleOfTextInRow" />
        </TableRow>

        <TableRow
            style="@style/styleOfRow">

            <TextView
                android:id="@+id/textView6"
                style="@style/styleOfTextInRow"
                android:text="Phone" />

            <TextView
                android:id="@+id/textView5"
                style="@style/styleOfTextInRow" />
        </TableRow>

        <TableRow
            style="@style/styleOfRow">

            <TextView
                style="@style/styleOfTextInRow"
                android:text="Age" />

            <TextView
                android:id="@+id/textView8"
                style="@style/styleOfTextInRow" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>